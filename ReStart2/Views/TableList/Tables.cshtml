<div class="container">
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div id="cont">
            @foreach (TableModel tableModel in Model)
            {
                <div class="cont">
                    <a href="http://localhost:50309/Table/Table/@tableModel.Table.Id" @*asp-area="" asp-controller="Table" asp-action="Table" *@ style="width:100%;height:50px;">
                        <div style="margin-left:5px;">   @tableModel.Table.Name <h id="TableSize1"> @tableModel.Table.Users.Count</h> <h id="TableSize2"> @tableModel.Table.Size</h></div>
                    </a>
                </div>
            }
        </div>
        <img style="position:absolute;right:1px;top:8%;height:92vh" src="~/images/business_man.png" />
    </form>
</div>

