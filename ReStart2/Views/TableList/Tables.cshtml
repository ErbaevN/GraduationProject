        <a class="navbar-brand strukt liotst1" asp-controller="TableList" asp-action="Tables" asp-route-id="5"><h8>Занято мест </h8></a>
        <a class="navbar-brand strukt liotst2" asp-controller="TableList" asp-action="Tables" asp-route-id="3"><h8>Всего мест    </h8></a>}
